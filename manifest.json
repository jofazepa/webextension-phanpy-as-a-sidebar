{
  "manifest_version": 2,
  "name": "Phanpy as a Sidebar",
  "description": "Displays a sidebar that lets you connect to Mastodon using Phanpy.",
  "version": "0.1",
  
  "icons": {
    "48": "icons/icon48.png"
  },
  
  "commands": {
    "_execute_sidebar_action": {
      "suggested_key": {
        "default": "Alt+Shift+M"
      },
      "description": "Opens and closes Phanpy sidebar"
    }
  },
  
  "sidebar_action": {
    "default_icon": {
      "512": "icons/icon512.png"
    },
    "default_title": "Mastodon",
    "default_panel": "index.html"
  },
  
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  
  "permissions": [
    "<all_urls>",
    "storage",
    "menus"
  ]
}
